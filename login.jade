.login-block(ng-controller="LoginController")
  .row
    form(ng-submit="login()")
      .form-group
        label Login
        input.form-control(
          type="text"
          ng-model="username"
          required
        )
        p.help-block Enter your username
      .form-group
        label Password
        input.form-control(
          type="password"
          ng-model="password"
          required
        )
        p.help-block Enter your password
      input.btn(
        type="submit"
        value="Sign in"
      )
      input.btn(
        type="button"
        value="Registration"
        ui-sref="registration"
      )