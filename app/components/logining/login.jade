.row
  .col-md-6.col-md-offset-3
    .alert.alert-danger.err-msg(ng-hide="loginCtrl.isMsgHide") {{loginCtrl.allertMsg}}
.row
  .col-md-4.col-md-offset-4
    .panel.panel-primary.login-form
      .panel-heading Sign In:
      form.panel-body(ng-submit="loginCtrl.signIn()")
        .form-group
          label(for="login") Login:
          input.form-control(type="text", ng-model="loginCtrl.user.username", required)
        .form-group
          label(for="password") Password:
          input.form-control(type="password", ng-model="loginCtrl.user.password", required)
        .form-group
          input.btn.btn-success(type="submit", value="SIGN IN")
          button.btn.btn-success.pull-right(ui-sref="registration") SIGN UP
