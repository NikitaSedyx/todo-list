include ./creating-groups/creating-groups.jade
.row
  include ./filtering-groups-by-color/color-filter.jade
  .btn-group.switch.pull-right
    label.btn.btn-primary(
      ng-model="groupView"
      btn-radio="'list'"
      ng-change="changeGroupView()"
    )
      i.glyphicon.glyphicon-th-list
    label.btn.btn-primary(
      ng-model="groupView"
      btn-radio="'panel'"
      ng-change="changeGroupView()"
    )
      i.glyphicon.glyphicon-th
.row
  div(ui-view="list", ng-if="groupView == 'list'")
  div(ui-view="panel", ng-if="groupView == 'panel'")
