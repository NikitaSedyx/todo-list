.row.new-groups-inp(
  ng-controller="ActionController as actionCtrl"
  ng-switch="actionCtrl.action"
)
  .col-md-6.col-md-offset-3.new-group(
    ng-switch-when="default"
    ng-click="actionCtrl.newTextGroup()"
  )
    span New group
    span.ctl-pane.pull-right
      i.glyphicon.glyphicon-th-list.ctrl-btn(
        tooltip-placement="bottom"
        tooltip="Create new list"
        ng-click="actionCtrl.newListGroup()"
      )
      i.glyphicon.glyphicon-search.ctrl-btn(
        tooltip-placement="bottom"
        tooltip="Search"
        ng-click="actionCtrl.action='search'"
      )
  .col-md-6.col-md-offset-3.new-group(
    ng-switch-when="new-group"
    ng-controller="CreatingGroupController as creatingGroupCtrl"
  )
    textarea.group-title(
      msd-elastic
      ng-model="creatingGroupCtrl.newGroup.title"
      placeholder="Input a title"
    )
    textarea.group-description(
      msd-elastic
      ng-model="creatingGroupCtrl.newGroup.items[0].description"
      placeholder="Description"
      ng-if="actionCtrl.mode=='text'"
    )
    .new-items(ng-if="actionCtrl.mode=='list'")
      .row.new-item(ng-repeat="item in creatingGroupCtrl.newGroup.items")
        .col-xs-1
          input.toogle(
            type="checkbox"
            ng-model="item.is_completed"
          )
        .col-xs-10
          textarea.item-description(
            msd-elastic
            rows="1"
            ng-model="item.description"
          )
        .col-xs-1
          i.glyphicon.glyphicon-trash(ng-click="creatingGroupCtrl.deleteItem($index)")
      .new-item
        textarea.item-description(
          msd-elastic
          placeholder="Description"
          ng-model="creatingGroupCtrl.newItem.description"
          ng-blur="creatingGroupCtrl.addItem()"
        )
    .control-pane
      .btn-group
        i.glyphicon.glyphicon-user.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add user"
          ng-click="actionCtrl.addContributors()"
        )
        i.glyphicon.glyphicon-tasks.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="List"
          ng-click="actionCtrl.listMode(view)"
        )
        i.glyphicon.glyphicon-save-file.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add file"
          ng-click="actionCtrl.addFiles()"
        )
      .btn-group.pull-right
        i.glyphicon.glyphicon-ok.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add group"
          ng-click="actionCtrl.addGroup()"
        )
        i.glyphicon.glyphicon-remove.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Cancel"
          ng-click="actionCtrl.cancel()"
        )
