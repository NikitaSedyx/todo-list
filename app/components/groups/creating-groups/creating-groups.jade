.row.new-groups-inp(
  ng-controller="ModeController as modeCtrl"
  ng-switch="modeCtrl.action"
)
  .col-md-6.col-md-offset-3.new-group(
    ng-switch-when="default"
    ng-click="modeCtrl.newTextGroup()"
  )
    span New group
    span.ctl-pane.pull-right
      i.glyphicon.glyphicon-th-list.ctrl-btn(
        tooltip-placement="bottom"
        tooltip="Create new list"
        ng-click="modeCtrl.newListGroup()"
      )
      i.glyphicon.glyphicon-search.ctrl-btn(
        tooltip-placement="bottom"
        tooltip="Search"
        ng-click="modeCtrl.action='search'"
      )
  .col-md-6.col-md-offset-3.new-group(
    ng-switch-when="new-group"
    ng-controller="AddItemController as itemCtrl"
  )
    textarea.group-title(
      msd-elastic
      ng-model="itemCtrl.newGroup.title"
      placeholder="Input a title"
    )
    textarea.group-description(
      msd-elastic
      ng-model="itemCtrl.newGroup.items[0].description"
      placeholder="Description"
      ng-if="modeCtrl.mode=='text'"
    )
    .new-items(ng-if="modeCtrl.mode=='list'")
      .row.new-item(ng-repeat="item in itemCtrl.newGroup.items")
        .col-xs-1
          input.toogle(
            type="checkbox"
            ng-model="item.is_completed"
          )
        .col-xs-11
          textarea.item-description(
            msd-elastic
            rows="1"
            ng-model="item.description"
          )
      .new-item
        textarea.item-description(
          msd-elastic
          placeholder="Description"
          ng-model="itemCtrl.newItem.description"
          ng-blur="itemCtrl.addItem()"
        )
    .control-pane
      .btn-group
        i.glyphicon.glyphicon-user.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add user"
          ng-click="modeCtrl.addContributors()"
        )
        i.glyphicon.glyphicon-tasks.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="List"
          ng-click="modeCtrl.listMode(view)"
        )
        i.glyphicon.glyphicon-save-file.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add file"
          ng-click="modeCtrl.addFiles()"
        )
      .btn-group.pull-right
        i.glyphicon.glyphicon-ok.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add group"
          ng-click="itemCtrl.addGroup();modeCtrl.cancel()"
        )
        i.glyphicon.glyphicon-remove.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Cancel"
          ng-click="modeCtrl.cancel()"
        )
