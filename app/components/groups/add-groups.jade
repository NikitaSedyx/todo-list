.row.new-groups-inp(
  ng-controller="AddGroupController"
  ng-switch="actions.action"
)
  .col-md-6.col-md-offset-3.new-group(
    ng-switch-when="default"
    ng-click="actions.action='new-task'"
  )
    span New group
    span.ctl-pane.pull-right
      i.glyphicon.glyphicon-th-list.ctrl-btn(
        tooltip-placement="bottom"
        tooltip="Create new list"
        ng-click="actions.action='new-task';listMode(view)"
      )
      i.glyphicon.glyphicon-search.ctrl-btn(
        tooltip-placement="bottom"
        tooltip="Search"
        ng-click="actions.action='search'"
      )
  .col-md-6.col-md-offset-3.new-group(ng-switch-when="new-task")
    textarea.task-title(
      msd-elastic
      ng-model="newGroup.title"
      placeholder="Input a title"
    )
    textarea.task-description(
      msd-elastic
      ng-model="newGroup.tasks[0].description"
      placeholder="Description"
      ng-if="!view.isList"
    )
    .new-tasks(ng-if="view.isList")
      .new-task(ng-repeat="task in newGroup.tasks")
        input.toogle(
          type="checkbox"
          ng-model="task.is_completed"
        )
        span.task-description(
          contentEditable="true"
          ng-model="task.description"
        )
      .task-description(
        contentEditable="true"
        placeholder="Description"
        ng-model="newTask.description"
        ng-blur="addTask(newTask)"
      )

    .control-pane
      .btn-group
        i.glyphicon.glyphicon-user.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add user"
        )
        i.glyphicon.glyphicon-tasks.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="List"
          ng-click="listMode(view)"
        )
        i.glyphicon.glyphicon-save-file.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add file"
        )
      .btn-group.pull-right
        i.glyphicon.glyphicon-ok.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Add group"
          ng-click="addGroup(newGroup)"
        )
        i.glyphicon.glyphicon-remove.btn.btn-default(
          tooltip-placement="bottom"
          tooltip="Cancel"
          ng-click="cancel()"
        )
