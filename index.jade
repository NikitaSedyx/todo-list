doctype html
html(ng-app="todo")
  head
    title Todo

    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    link(href="assets/libs/bootstrap/dist/css/bootstrap.css", rel="stylesheet")
    link(href="assets/css/index.css", rel="stylesheet")
    link(href="assets/libs/angular-ui-grid/ui-grid.min.css", rel="stylesheet")

  body
    .container-fluid
      .row.top-menu
        .col-md-10.col-md-offset-1
          .title.pull-left(ui-sref="tasks") Todo
          .pull-right(ng-controller="LogoutController as logCtrl")
            .dropdown(ng-if="logCtrl.user.data")
              button.btn.dropdown-toggle(
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="true"
              ) {{logCtrl.user.data.username}}
                span.caret
              ul.dropdown-menu.pull-right(aria-labelledby="user-dropdown")
                li
                  a(ng-click="logCtrl.logout()") Logout
      .row.content
        .col-md-10.col-md-offset-1
          div(ui-view)

    script(src="assets/libs/jquery/dist/jquery.min.js")
    script(src="assets/libs/masonry/dist/masonry.pkgd.js")
    script(src="assets/libs/bootstrap/dist/js/bootstrap.js")
    script(src="assets/libs/angular/angular.min.js")
    script(src="assets/libs/angular-resource/angular-resource.min.js")
    script(src="assets/libs/angular-bootstrap/ui-bootstrap.min.js")
    script(src="assets/libs/angular-bootstrap/ui-bootstrap-tpls.js")
    script(src="assets/libs/angular-ui-validate/dist/validate.js")
    script(src="assets/libs/angular-ui-router/release/angular-ui-router.min.js")
    script(src="assets/libs/angular-ui-grid/ui-grid.min.js")
    script(src="assets/libs/angular-elastic/elastic.js")
    script(src="assets/libs/ngInfiniteScroll/build/ng-infinite-scroll.min.js")
    script(src="assets/libs/underscore/underscore-min.js")
    script(src="assets/libs/highcharts-release/highcharts.js")
    script(src="assets/libs/ng-file-upload/ng-file-upload-all.min.js")
    script(src="assets/libs/d3/d3.min.js")
    script(src="app/index.js")
